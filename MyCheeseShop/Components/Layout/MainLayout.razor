@using Microsoft.AspNetCore.Components.Authorization
@using MyCheeseShop.Context
@using MyCheeseShop.Model
@inject UserProvider UserProvider
@inherits LayoutComponentBase

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/">My Project</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">Home</NavLink>
                </li>
            </ul>
            <ul class="nav navbar-nav ml-auto w-100 justify-content-end">
                <AuthorizeView>
                    <Authorized>
                        <AuthorizeView Roles="Admin" Context="innerContext">
                            <span class="navbar-text me-1"> Admin </span>
                        </AuthorizeView>
                        <li class="navbar-text"> @context.User.Identity?.Name </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/Account/Logout" Match="NavLinkMatch.All">Logout</NavLink>
                        </li>
                    </Authorized>
                    <NotAuthorized>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/Account/Login" Match="NavLinkMatch.Prefix">Login</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/Account/Register" Match="NavLinkMatch.Prefix">Register</NavLink>
                        </li>
                    </NotAuthorized>
                </AuthorizeView>
            </ul>
            <ul class="nav navbar-nav ml-auto w-100 justify-content-end">
              <AuthorizeView>
                  <Authorized>
                    <li class="nav-item">
                        <NavLink class="btn btn-outline-warning" href="/Account/Logout" Match="NavLinkMatch.All">Logout</NavLink>
                    </li>
                  </Authorized>
                  <NotAuthorized>
                     <li class="nav-item">
                        <NavLink class="btn btn-outline-warning" href="/Account/Login" Match="NavLinkMatch.Prefix">Login</NavLink>
                     </li>
                     <li class="nav-item">
                        <NavLink class="btn btn-outline-warning" href="/Account/Register" Match="NavLinkMatch.Prefix">Register</NavLink>
                     </li>
                  </NotAuthorized>
              </AuthorizeView>
            </ul>
        </div>
    </div>
</nav>

<main class="container">
    <div class="p-2 rounded">
        @Body
    </div>
</main>